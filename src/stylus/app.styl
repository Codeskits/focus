$red   = #EA4F52
$green = #62CAAA
$blue  = #56C6F4
$dark  = #444444
$white = #ffffff
$gray  = #cedee8

html
body
    margin: 0
    padding: 0
*
    box-sizing: border-box

body
    overflow: hidden

.focus
    width: 100%
    height: 100vh
    transition: 0.5s
    transform: translate3d(0, 0, 0)

    &-nav
        position: fixed
        top: 40%
        right: 10px
        list-style: none
        padding: 0
        margin: 0
    &-dot
        width: 15px
        height: 15px
        margin: 10px 5px
        display: block
        background-color: $gray
        border-radius: 50%
        border: 4px solid $white
        box-shadow: 0 2px 4px alpha($dark, 0.2)
        cursor: pointer
        &.is-active
            background-color: $blue

.section
    position: relative
    width: 100%
    height: 100%
    margin-left: 0;
    display: flex
    transition: 0.5s
    justify-content: flex-start
    &-content
        width: 400px
        font-size: 30px
        margin: auto
        color: $white

.slide
    width: 100%
    height: 100%
    flex-shrink: 0
